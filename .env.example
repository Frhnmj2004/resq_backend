# ===========================================
# Risk Assessment Backend API - Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in your actual values

# Application Configuration
# -------------------------
APP_NAME="Smart Risk Assessment API"
APP_HOST=localhost
APP_PORT=8080
APP_ENV=development

# Database Configuration (PostgreSQL)
# ------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=risq_user
DB_PASSWORD=your_database_password_here
DB_NAME=risq_db
DB_SSL_MODE=disable

# Redis Configuration (Caching & Vector Store)
# ---------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI LLM Configuration
# ------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# JWT Authentication Configuration
# --------------------------------
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=24h

# Logging Configuration
# ---------------------
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# Setup Instructions:
# ===========================================
#
# 1. Copy this file: cp .env.example .env
# 2. Set OPENAI_API_KEY with your actual OpenAI API key
# 3. Change JWT_SECRET to a secure random string
# 4. Update database credentials if needed
# 5. For production, review all security settings above
#
# ===========================================
