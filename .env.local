# Local Development Configuration
APP_NAME=Smart Risk Assessment API
APP_PORT=8080
APP_HOST=0.0.0.0
APP_ENV=development

# Database Configuration (using Docker containers)
DB_HOST=localhost
DB_PORT=5433
DB_USER=risq_user
DB_PASSWORD=risq_password
DB_NAME=risq_db
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=risq-cluster
NATS_CLIENT_ID=risq-api
NATS_MAX_RECONNECTS=10
NATS_RECONNECT_WAIT=2s
NATS_CONNECTION_TIMEOUT=5s

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# JWT Configuration
JWT_SECRET=your_jwt_secret_for_development
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console

# External APIs
MARKET_DATA_API_KEY=your_market_data_api_key
MARKET_DATA_URL=https://api.marketdata.com/v1
NEWS_API_KEY=your_news_api_key
NEWS_API_URL=https://newsapi.org/v2
